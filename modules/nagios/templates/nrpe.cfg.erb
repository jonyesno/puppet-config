log_facility=daemon
pid_file=/var/run/nrpe.pid
server_port=5666
server_address=<%= @interface %>
nrpe_user=nagios
nrpe_group=nagios
allowed_hosts=<%= @manage %>

dont_blame_nrpe=0
# command_prefix=/usr/bin/sudo

debug=0
command_timeout=60
connection_timeout=300

#allow_weak_random_seed=1

command[check_load]=/usr/lib64/nagios/plugins/check_load -w 15,10,5 -c 30,25,20
command[check_swap]=/usr/lib64/nagios/plugins/check_swap -w 20 -c 10
command[check_mysql]=/usr/lib64/nagios/plugins/check_mysql
command[check_procs]=/usr/lib64/nagios/plugins/check_procs -w 250 -c 400 -s RSZDT
command[check_root_disk]=/usr/lib64/nagios/plugins/check_disk -w 20% -c 10% -M /
<%- if @apache %>
command[check_apache]=/usr/lib64/nagios/plugins/check_procs -c 1:<%= apache['servers'] + 2 %> -C httpd
<%- end %>
command[check_varnishd]=/usr/lib64/nagios/plugins/check_procs -c 2:2 -C varnishd
command[check_varnishncsa]=/usr/lib64/nagios/plugins/check_procs -c 1:1 -C varnishncsa
