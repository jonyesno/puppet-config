[client]
port = 3306
socket = /var/lib/mysql/mysql.sock
default-character-set = utf8

[mysqld]
user = mysql
port = 3306
socket = /var/lib/mysql/mysql.sock
skip-external-locking
key_buffer_size = 2M
max_allowed_packet = 32M
table_open_cache = 64
sort_buffer_size = 2M
read_buffer_size = 2M
read_rnd_buffer_size = 2M
myisam_sort_buffer_size = 64M
thread_cache_size = 8
query_cache_size = 32M
thread_concurrency = 8
open_files_limit = 31668

character-set-server = utf8

<%- if mysql.has_key?('replication') && mysql['replication'] == true %>
log-bin=/var/lib/mysql-log/master/mysql-bin
log-bin-index=/var/lib/mysql-log/master/mysql-bin.index
relay-log=/var/lib/mysql-log/slave/relay-bin
relay-log-index=/var/lib/mysql-log/slave/relay-bin.index
log-slave-updates = 1
sync_binlog = 0
expire_logs_days = 7
auto_increment_increment = 2
auto_increment_offset = <%= 2 - mysql['server-id'] % 2 %>
server-id	= <%= mysql['server-id'] %>
<%- end %>
log-slow-queries


innodb_data_home_dir = /var/lib/mysql
innodb_data_file_path = ibdata1:10M:autoextend
innodb_log_group_home_dir = /var/lib/mysql
innodb_file_per_table
innodb_buffer_pool_size = 64M
innodb_additional_mem_pool_size = 4M
innodb_log_file_size = 8M
innodb_log_buffer_size = 8M
innodb_flush_log_at_trx_commit = 1
innodb_lock_wait_timeout = 50

[mysqldump]
quick
max_allowed_packet = 16M

[mysql]
no-auto-rehash

[myisamchk]
key_buffer_size = 256M
sort_buffer_size = 256M
read_buffer = 2M
write_buffer = 2M

[mysqlhotcopy]
interactive-timeout
